<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.arquitectura.parkyer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Parkyer"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".views.CambiarMetodo"></activity>
        <activity android:name=".views.CambiarContrasenia" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".views.EditarPerfil" />
        <activity
            android:name=".views.ContactoInicio"
            android:label="@string/title_activity_contacto_inicio"
            android:theme="@style/Theme.Parkyer.NoActionBar" />
        <activity android:name=".views.QuienesSomos" />
        <activity android:name=".views.Perfil" />
        <activity android:name=".views.Contacto" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>